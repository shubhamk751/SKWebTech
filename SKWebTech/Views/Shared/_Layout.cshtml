@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SK Web Tech</title>

    <link href="~/css/site.css" rel="stylesheet" />
    <link href="https://unpkg.com/aos@2.3.4/dist/aos.css" rel="stylesheet" />
</head>
<body>
    <header class="navbar">
        <div class="container">
            <div class="logo">SK Web Tech</div>
            <nav class="nav-links" id="navLinks">
                <a href="/">Home</a>
                <a href="#services">Services</a>
                <a href="#about">About</a>
                <a href="#contact">Contact</a>
            </nav>
            <button id="themeToggle" class="theme-btn">🌙</button>
            <button id="navToggle" class="hamburger">☰</button>
        </div>
    </header>

    <main role="main">
        @RenderBody()
    </main>
    <div class="robot-container">
        <svg id="robot" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 64 64">
            <rect x="20" y="10" width="24" height="24" rx="4" fill="#6c63ff" />
            <circle cx="28" cy="20" r="3" fill="#fff" />
            <circle cx="36" cy="20" r="3" fill="#fff" />
            <rect x="26" y="28" width="12" height="6" fill="#fff" />
            <line x1="20" y1="34" x2="16" y2="44" stroke="#6c63ff" stroke-width="3" />
            <line x1="44" y1="34" x2="48" y2="44" stroke="#6c63ff" stroke-width="3" />
            <line x1="24" y1="10" x2="24" y2="6" stroke="#6c63ff" stroke-width="3" />
            <line x1="40" y1="10" x2="40" y2="6" stroke="#6c63ff" stroke-width="3" />
        </svg>
    </div>
    <footer class="footer">
        <div class="container">
            <p>&copy; @DateTime.Now.Year SK Web Tech | Professional Web & Enterprise Solutions</p>
        </div>
    </footer>

    <script src="https://unpkg.com/aos@2.3.4/dist/aos.js"></script>
    <script>
        AOS.init({ duration: 1000, once: true });

        // Dark/Light Mode Toggle
        const toggleBtn = document.getElementById("themeToggle");
        toggleBtn.addEventListener("click", () => {
            document.body.classList.toggle("dark-mode");
            toggleBtn.textContent = document.body.classList.contains("dark-mode") ? "☀️" : "🌙";
            localStorage.setItem("theme", document.body.classList.contains("dark-mode") ? "dark" : "light");
        });

        // Load saved theme
        if (localStorage.getItem("theme") === "dark") {
            document.body.classList.add("dark-mode");
            toggleBtn.textContent = "☀️";
        }

        // Mobile nav toggle
        const navToggle = document.getElementById("navToggle");
        const navLinks = document.getElementById("navLinks");
        navToggle.addEventListener("click", () => {
            navLinks.classList.toggle("active");
        });
    </script>
</body>
</html>
